{{$hp := sdict }}
{{with (dbGet 0 "HP")}}
  {{$hp = sdict .Value}}
{{end}}
{{$msg := ""}}
{{$en := ""}}

{{range $i, $j := $hp}}
  {{if eq $j.Ennemi "y"}}
    {{$en = print $en "▫️__" $j.Personnage "__ : **" $j.pv_actuel "**/" $j.pv_max "\n"}}
  {{else}}
    {{ if lt (toInt $j.pv_actuel) (toInt $j.pv_max)}}
      {{ $msg = print $msg "▫️" "__" $j.Personnage "__ : **" $j.pv_actuel "**/" $j.pv_max "\n"}}
    {{end}}
  {{ end}}
{{ end}}
{{$embed := cembed
"author" (sdict "name" "Point de vie" "icon_url" "https://i.imgur.com/oQxsUZR.png")
"description" (joinStr " " "**ALLIÉS**\n" $msg "\n\n **ENNEMIS** " $en)
"color" 0x74b5cd}}

{{editMessage 736937453788725278 758114611160809512 (complexMessageEdit "embed" $embed "content" "*Note :\n - Ce message est mis-à-jour toutes les 5 minutes.* \n *- Seuls les personnages ayant perdus des PV sont affichés dans cette liste.*\n - Les ennemis auront toujours leur PV affichés, même sans perte. Ils ne s'afficheront plus une fois tués, cependant. ") }}